{
    "version": 2,
    "regions": [
        "hnd1"
    ],
    "builds": [
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ],
    "env": {
        "LINE_CHANNEL_ACCESS_TOKEN": "@line_channel_access_token",
        "LINE_CHANNEL_SECRET": "@line_channel_secret"
    }
}